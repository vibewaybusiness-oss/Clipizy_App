{
  "id": "business_ad_workflow",
  "name": "Business Advertisement",
  "description": "Create a professional business advertisement",
  "initialStep": "llm_health",
  "globalSettings": {
    "autoSave": true,
    "errorHandling": "stop",
    "timeout": 30000
  },
  "steps": {
    "llm_health": {
      "id": "llm_health",
      "stepNumber": 1,
      "bricks": [
        {
          "id": "llm-pod-signal",
          "type": "api_call",
          "endpoint": "/api/v1/ai/runpod/signal-pod",
          "method": "POST",
          "payload": {
            "source": "static",
            "staticData": {"workflow": "llm-ollama"}
          },
          "response": {
            "saveConfig": {
              "key": "llmPodSignal",
              "type": "object",
              "backendKey": "settings",
              "backendType": "dict"
            }
          }
        }
      ],
      "nextStep": "ad_description",
      "autoSave": true
    },
    "ad_description": {
      "id": "ad_description",
      "stepNumber": 2,
      "bricks": [
        {
          "id": "ad-description-input",
          "type": "user_input",
          "inputType": "text",
          "saveConfig": {
            "key": "videoDescription",
            "type": "string",
            "backendKey": "settings",
            "backendType": "dict"
          },
          "label": "Advertisement Description",
          "placeholder": "Describe your business, product, or service and what you want to showcase...",
          "validation": {
            "required": true
          }
        },
        {
          "id": "ad-description-actions",
          "type": "llm",
          "buttons": [
            {
              "label": "Generate description with AI",
              "action": "generateVideoDescriptionWithAI",
              "returnValue": "ai_description",
              "variant": "default"
            }
          ],
          "activatePrompt": false,
          "activateFileUpload": false,
          "assistantMessage": {
            "content": "Let's create a professional advertisement for your business. Describe what you want to showcase - your product, service, or brand message.",
            "showDelay": 1200,
            "enableFileInput": false,
            "enablePromptInput": true
          }
        }
      ],
      "nextStep": "brand_assets",
      "autoSave": true
    },
    "brand_assets": {
      "id": "brand_assets",
      "stepNumber": 3,
      "bricks": [
        {
          "id": "brand-images-upload",
          "type": "user_input",
          "inputType": "file",
          "saveConfig": {
            "key": "referenceImages",
            "type": "dict",
            "backendKey": "referenceImages",
            "backendType": "dict"
          },
          "label": "Upload brand assets",
          "accept": "image/*",
          "multiple": true,
          "maxFiles": 10,
          "validation": {
            "required": false
          }
        },
        {
          "id": "brand-colors-input",
          "type": "user_input",
          "inputType": "text",
          "saveConfig": {
            "key": "brandColors",
            "type": "string",
            "backendKey": "settings",
            "backendType": "dict"
          },
          "label": "Brand Colors",
          "placeholder": "Enter your brand colors (e.g., #FF5733, #33C3F0)...",
          "validation": {
            "required": false
          }
        },
        {
          "id": "brand-assets-actions",
          "type": "llm",
          "buttons": [
            {
              "label": "Skip brand assets",
              "action": "skipReferenceImages",
              "returnValue": "skip",
              "variant": "outline"
            }
          ],
          "activatePrompt": false,
          "activateFileUpload": false,
          "assistantMessage": {
            "content": "You can upload brand assets like logos, product images, or reference visuals. You can also specify your brand colors. This step is optional.",
            "showDelay": 1200,
            "enableFileInput": true,
            "enablePromptInput": true
          }
        }
      ],
      "nextStep": "ad_styles",
      "autoSave": true
    },
    "ad_styles": {
      "id": "ad_styles",
      "stepNumber": 4,
      "bricks": [
        {
          "id": "style-selection",
          "type": "user_input",
          "inputType": "multiselect",
          "saveConfig": {
            "key": "selectedStyles",
            "type": "array",
            "backendKey": "settings",
            "backendType": "dict"
          },
          "label": "Select Advertisement Styles",
          "options": [
            { "label": "Professional", "value": "professional" },
            { "label": "Modern", "value": "modern" },
            { "label": "Minimalist", "value": "minimalist" },
            { "label": "Bold", "value": "bold" },
            { "label": "Elegant", "value": "elegant" },
            { "label": "Vibrant", "value": "vibrant" }
          ],
          "validation": {
            "required": true
          }
        },
        {
          "id": "style-actions",
          "type": "llm",
          "buttons": [
            {
              "label": "Generate advertisement",
              "action": "generateVideo",
              "returnValue": "generate",
              "variant": "default"
            }
          ],
          "activatePrompt": false,
          "activateFileUpload": false,
          "assistantMessage": {
            "content": "Select the visual styles that best represent your brand. You can choose multiple styles.",
            "showDelay": 1200,
            "enableFileInput": false,
            "enablePromptInput": false
          }
        }
      ],
      "nextStep": "completed",
      "autoSave": true
    },
    "completed": {
      "id": "completed",
      "stepNumber": 5,
      "bricks": [
        {
          "id": "completion-message",
          "type": "llm",
          "activatePrompt": false,
          "activateFileUpload": false,
          "assistantMessage": {
            "content": "Your business advertisement workflow is complete! Your video is being generated and will be available shortly.",
            "showDelay": 0,
            "enableFileInput": false,
            "enablePromptInput": false
          }
        }
      ],
      "nextStep": "completed",
      "autoSave": true
    }
  }
}
